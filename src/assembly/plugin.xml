<?xml version="1.0" encoding="UTF-8"?>
<plugin id="visual-paradigm-mcp-plugin"
        name="MCP Server Plugin"
        provider="Manoel Brunnen"
        class="com.brunnen.vp.usecase.VPUseCasePlugin">

    <runtime>
    </runtime>

    <actionSets>
        <actionSet id="usecase.ActionSet1">
            <toolbar id="usecase.ActionSet1.Toolbar1"
                     orientation="north"
                     index="last"/>

            <action id="usecase.ActionSet1.create-diagram"
                    actionType="generalAction"
                    label="Create Use Case Diagram"
                    style="normal"
                    toolbarPath="usecase.ActionSet1.Toolbar1/#">
                <actionController class="com.brunnen.vp.usecase.action.CreateUseCaseDiagramActionController"/>
            </action>

            <action id="usecase.ActionSet1.add-usecase"
                    actionType="generalAction"
                    label="Add Use Case"
                    style="normal"
                    toolbarPath="usecase.ActionSet1.Toolbar1/#">
                <actionController class="com.brunnen.vp.usecase.action.AddUseCaseActionController"/>
            </action>

            <action id="usecase.ActionSet1.add-actor"
                    actionType="generalAction"
                    label="Add Actor"
                    style="normal"
                    toolbarPath="usecase.ActionSet1.Toolbar1/#">
                <actionController class="com.brunnen.vp.usecase.action.AddActorActionController"/>
            </action>

            <action id="usecase.ActionSet1.generate-report"
                    actionType="generalAction"
                    label="Generate Report"
                    style="normal"
                    toolbarPath="usecase.ActionSet1.Toolbar1/#">
                <actionController class="com.brunnen.vp.usecase.action.GenerateUseCaseReportActionController"/>
            </action>

            <action id="usecase.ActionSet1.add-relationship"
                    actionType="generalAction"
                    label="Relationship (include and extend)"
                    style="normal"
                    toolbarPath="usecase.ActionSet1.Toolbar1/#">
                <actionController class="com.brunnen.vp.usecase.action.AddRelationshipActionController"/>
            </action>
        </actionSet>
    </actionSets>
</plugin>
