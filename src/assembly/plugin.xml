<?xml version="1.0" encoding="UTF-8"?>
<plugin id="visual-paradigm-mcp-plugin"
        name="Visual Paradigm MCP Server Plugin"
        provider="Manoel Brunnen"
        class="com.brunnen.vp.usecase.VPUseCasePlugin">

    <runtime>
        <!-- Include Spring Boot and MCP dependencies -->
    </runtime>

    <actionSets>
        <actionSet id="mcp.ActionSet1">
            <toolbar id="mcp.ActionSet1.Toolbar1"
                     orientation="north"
                     index="last"/>

            <action id="mcp.ActionSet1.toggle-server"
                    actionType="generalAction"
                    label="Toggle MCP Server"
                    style="normal"
                    toolbarPath="mcp.ActionSet1.Toolbar1/#">
                <actionController class="com.brunnen.vp.usecase.action.McpServerToggleActionController"/>
            </action>

            <action id="mcp.ActionSet1.server-status"
                    actionType="generalAction"
                    label="MCP Server Status"
                    style="normal"
                    toolbarPath="mcp.ActionSet1.Toolbar1/#">
                <actionController class="com.brunnen.vp.usecase.action.McpServerStatusActionController"/>
            </action>
        </actionSet>
    </actionSets>
</plugin>
